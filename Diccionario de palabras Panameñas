def  Base_datos ():
    devolver  sqlite3 . conectar ( DATOS )


def  información ():
    tablas  = []
     captar =  Base_datos ()
    cursor  =  captar . cursor ()
    para  tabla  en  tablas :
        cursor _ ejecutar ( tabla )


def  Menú_principal ():
    información ()

    print ( " \n ***Dicionario de palabras de slang panameño***" )
    menú  =  """
a) Agregar nueva palabra
b) Editar palabras
c) Eliminar palabras
d) Ver lista de palabras
e) saber significado de palabra
f) salir
Elige: """
    elección  =  ""
    while  elección  !=  "f" :
        eleccion  =  entrada ( menu )
        if  eleccion  ==  "a" :
            palabra  =  input ( " \n Ingresa la palabra: " )
            agregar_palabra  =  buscar_significado_palabra ( palabra )
            si  agregar_palabra :
                print ( f"La palabra ' { palabra } ' ya existe" )
            más :
                significado  =  input ( " \n Ingresa el significado: " )
                agregar ( palabra , significado )
                print ( "Palabra agregada" )

        if  elección  ==  "b" :
            palabra  =  input ( " \n Ingresa la palabra a editar: " )
            nuevo_significado  =  input ( " \n Ingresa el nuevo significado: " )
            editar ( palabra , nuevo_significado )
            print ( "Palabras actualizadas" )

        if  eleccion  ==  "c" :
            palabra  =  input ( " \n Ingresa la palabra que desea eliminar: " )
            eliminar ( palabra )

        if  eleccion  ==  "d" :
            palabras  =  obtener_palabras ()
            print ( " \n **** Lista de palabras ****" )
            para  palabra  en  palabras :
                imprimir ( palabra [ 0 ])

        if  eleccion  ==  "e" :
            palabra  =  input ( " \n Ingresa la palabra que desea saber su significado: " )
            significado  =  buscar_significado_palabra ( palabra )
            si  significado :
                print ( f" \n El significado de ' { palabra } ' es: { significado [ 0 ] } " )
            más :
                print ( f"Palabra ' { palabra } ' no encontrada" )


def  agregar ( palabra , significado ):
    conexion  =  Base_datos ()
    cursor  =  conexión . cursor ()
    sentencia  =  "INSERTAR EN EL diccionario(palabra, significado) VALORES (?, ?)"
    cursor _ ejecutar ( sentencia , [ palabra , significado ])
    conexión _ cometer ()


def  editar ( palabra , nuevo_significado ):
    conexion  =  Base_datos ()
    cursor  =  conexión . cursor ()
    sentencia  =  "ACTUALIZAR diccionario SET significado = ? WHERE palabra = ?"
    cursor _ ejecutar ( sentencia , [ nuevo_significado , palabra ])
    conexión _ cometer ()


def  eliminar ( palabra ):
    conexion  =  Base_datos ()
    cursor  =  conexión . cursor ()
    sentencia  =  "ELIMINAR DEL diccionario DONDE palabra = ?"
    cursor _ ejecutar ( sentencia , [ palabra ])
    conexión _ cometer ()


def  obtener_palabras ():
    conexion  =  Base_datos ()
    cursor  =  conexión . cursor ()
    consulta  =  "SELECCIONA palabra DEL diccionario"
    cursor _ ejecutar ( consultar )
     cursor de retorno . buscar ()


def  buscar_significado_palabra ( palabra ):
    conexion  =  Base_datos ()
    cursor  =  conexión . cursor ()
    consulta  =  "SELECCIONA significado DESDE diccionario DONDE palabra = ?"
    cursor _ ejecutar ( consultar , [ palabra ])
     cursor de retorno . buscar ()


si  __nombre__  ==  '__principal__' :
    Menú_principal ()
